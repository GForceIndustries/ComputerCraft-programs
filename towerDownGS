local descended = 0
while turtle.detectDown() == false do
  turtle.down()
  descended = descended + 1
end
print(descended)

if descended > 64 then
  descended = 64
  print(descended)
end

turtle.select(1)
for i=1,2 do
  turtle.up()
  turtle.placeDown()
  descended = descended - 1
end
turtle.select(16)
turtle.up()
turtle.placeDown()
descended = descended - 1


while descended > 3 do
  turtle.select(1)
  for i=1,3 do
    turtle.up()
    turtle.placeDown()
    descended = descended - 1
  end
  turtle.select(16)
  turtle.up()
  turtle.placeDown()
  descended = descended - 1
end
turtle.select(1)
for i=1,3 do
  turtle.up()
  turtle.placeDown()
  descended = descended - 1
end
print(descended)
